<% for(var i = 0; i < users.length; i++) { %>
<tr>
    <td><%= i + 1 %></td>
    <td><%= users[i].name %></td>
    <td><%= users[i].email %></td>
    <td>$<%= users[i].balance %></td>

    <td>
        <input type="date" id="start" name="trip-start"
        Date new = <%= users[i].date %>
        value = new Date().getFullDay()
        min="2022-08-01" max="2023-12-31">
          
    </td>

    <td>
        <a href="/update-user?id=<%= users[i]._id%>" class="btn border-shadow update">
            <span class ="text-gradient"><i class="fas fa-pencil-alt"></i></span>
        </a>
        <a class = "btn border-shadow delete" data-id = <%= users[i]._id%>>
            <span class ="text-gradient"><i class="fa-solid fa-ban"></i></span>
        </a>
        <a class = "btn border-shadow notify">
            <span class ="text-gradient"><i class="fa-solid fa-bell"></i></span>
        </a>
    </td>

</tr>
<% } %>